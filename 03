        <div class="swiper-slide">
          <a href="{{ block.settings.link }}" class="glass-card">

            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: '100x' }}" class="category-icon" alt="{{ block.settings.title }}">
            {% endif %}

